<% provide(:title, 'News Site') %>
<div class="articleContent">
<h1><%=link_to('Articles', index_path) %></h1>
<hr>

<% @articles.each do |article| %>
	<div class="art_entry">
		<tr><h2><%= link_to article.title, article %></h2></tr>
		<tr>
		<%if article.text.length<200 %>		<%=article.text%>
		<%else%>	<%= article.text[0..200] %> <%=link_to('...', article) %>
		<%end%>
		</tr>
		<div class="auth">
		<tr>written by: <%= article.author %></tr>
		</div>
	</div>
<% end %>


<br />
<div class="clear"></div>
</div>